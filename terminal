poweroff() {
    echo "user" | sudo -S poweroff ; 
}

reboot() {
    echo "user" | sudo -S reboot ;  
}

update() {
    echo "user" | sudo -S apt-get update ;
}

upgrade() {
    echo "user" | sudo -S apt-get upgrade ;
}

